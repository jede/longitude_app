//= require 'style'


@import 'compass/reset';
@import 'compass/utilities/general/clearfix';
@import 'longitude';


@include longitude(3 6 9 12) {
  section.content {
    @include clearfix;
    margin: 0 auto;
    max-width: full-width();

    @if(column-count() < 9) {
      background-color: #EEE;
    } @else {
      background-image: url(<%= image_path 'pinstriped_suit.png' %>);
    }

    & > h1 {
      @include gutters;
    }
  }

  section.books {
    article {
      float: left;
      @if(column-count() <= 6) {
        width: full-width($outer-gutters: false);
      } @else {
        width: columns(3);
      };
      margin: 10px gutter();
      height: 180px;
    }
  }
}


